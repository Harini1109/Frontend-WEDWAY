<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".InvitationGenerationActivity">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/back_arrow"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <!-- ScrollView to handle smaller screens -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Your Invitation"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Bride Name -->
            <EditText
                android:id="@+id/etBrideName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bride Name"
                android:inputType="textPersonName"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginTop="12dp"/>

            <!-- Groom Name -->
            <EditText
                android:id="@+id/etGroomName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Groom Name"
                android:inputType="textPersonName"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginTop="12dp"/>

            <!-- Location -->
            <EditText
                android:id="@+id/etEventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:inputType="text"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginTop="12dp"/>

            <!-- Date -->
            <EditText
                android:id="@+id/etEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date (dd/mm/yyyy)"
                android:inputType="date"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginTop="12dp"/>

            <!-- Time -->
            <EditText
                android:id="@+id/etEventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Time (HH:MM AM/PM)"
                android:inputType="time"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginTop="12dp"/>

            <!-- Notes -->
            <EditText
                android:id="@+id/etEventNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Additional Notes"
                android:inputType="textMultiLine"
                android:layout_marginTop="12dp"
                android:minLines="3"/>

            <!-- Generate Invitation Button -->
            <Button
                android:id="@+id/btnGenerateInvitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Invitation"
                android:backgroundTint="#FFC107"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/pro"
            android:contentDescription="Profile" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/set"
                android:contentDescription="Settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
